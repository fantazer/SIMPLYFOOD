@import "grid/_grid.styl"
@import 'rupture'
@import "variable/_function.styl"
@import "variable/_ie.styl"
@import "variable/_helper.styl"
@import "variable/_default.styl"
@import "variable/config/_color.styl"
@import "variable/config/_typography.styl"
@import "variable/config/_btn.styl"
@import "variable/config/_input.styl"
@import "../module/**/*"

body
	@extend .type--main
	font-family $v-font
	color $main-text-color
	line-height 1.4
	letter-spacing 0.01em

.main-cont
	+below(1280px)
		padding: 0 42px
	+below(640px)
		padding: 0 20px
	center(1312px,10px)

.main-cont-sm
	+below(640px)
		padding: 0 20px
	center(936px,42px)

.main-cont-xs
	+below(640px)
		padding: 20px
	center(760px,42px)

.main-cont--mobile-clear
	+below(640px)
		padding: 0

.scroll-template-light
	+above(1025px)
		&::-webkit-scrollbar
			-webkit-appearance: none
			width: 4px
			height: 8px
			background: #f8f8f8
			border-radius: 4px
		&::-webkit-scrollbar-thumb
			border-radius: 4px
			background: $border-color

.page
	f()
	fl()
	min-height 100vh

.content
	@extend .pt-100
	@extend .pb-100
	flex-grow 1

.content--clear
	padding: 0
.content--clear-bottom
	padding-bottom: 0

.content--clear-top
	padding-top: 0

.content--mark
	background: $gradient

.content--mid
	flex(mid)

.content--mobile-clear
	+below(640px)
		padding: 0

.hidden-on-mobile
	+below(640px)
		display none!important

.visible-on-mobile
	+above(641px)
		display none!important


.section
	+below(768px)
		padding-bottom: 40px
	@extend .pb-100

.section-sm
	@extend .pb-80

.section-extend
	@extend .p-100
	@extend .mb-100

.section-full
	@extend .p-100

.section--gradient
	background: $gradient

// animate top menu
@keyframes slideInDown
	from
		transform: translate3d(0, -100%, 0)
		visibility: visible;
	to
		transform: translate3d(0, 0, 0)

.shrink
	position fixed
	top 0
	left 0
	background white
	width 100%
	margin 0
	animation:  slideInDown  1s 1 ease-in-out;
	z-index 100
// animate top menu === end

// error
.page-error
	flex(mid)
	fl()
	height: 100%
.page-error__title
	@extend .type--xl
	margin-bottom: 30px
	font-weight: 700
	color $gray
.page-error__img
	margin-bottom: 30px
.page-error__text
	@extend .type--md
	color $gray
	margin-bottom: 30px
.page-error__get
	@extend .btn--md
	@extend .btn--mark
// error === end

// modal
.modal-layer
	width: 100%
	height: 100vh
	position: fixed
	z-index 1000
	top 0
	left 0
	visibility: hidden
	transition all 1s // duration for fade
	opacity 0

.modal-layer-show
	visibility: visible
	opacity 1

.modal-cont
	width: 100%
	height: 100%
	position: relative
	max-height 100%
	overflow: auto

.modal-filter
	position: absolute
	top: 0
	left: 0
	background: rgba(32, 34, 44, 0.5);
	width: 100%
	height: 100vh
	min-height 100vh

.modal
	+below(640px)
		width: 100%
		box-shadow 0 0 0
	transform scale(.9) translateZ(0) translate3d(0, 0, 0)
	will-change: transform, opacity;
	backface-visibility: hidden
	position: absolute
	opacity 0
	transition transform .6s, opacity .8s
	width 410px
	left -9999px
	top -9999px
	.order__row
		margin-bottom: 20px
		border-bottom 0

.modal--md
	+below(640px)
		width: 100%
	width 632px


.modal-content
	+below(640px)
		height: 100%
		//overflow-y scroll
		width: calc(100% - 40px)
	margin: 60px auto
	background: white
	position: relative
	padding: 32px
	br(16px)

.modal__show
	max-height 100%
	opacity 1
	transform scale(1) translateZ(0) translate3d(0, 0, 0)
	position: relative
	z-index 1000
	left initial
	top initial
	transition transform .6s, opacity .8s
	will-change: transform, opacity

.modal-close
	+below(640px)
		right 20px
	position: absolute
	top: 20px
	right: 0px
	cp()
	z-index 10
	&:hover
		.icon
			fill $mark
	.icon
		tr()
		fill white

.modal-hide-animation
	transform scale(.9)
	opacity 0
	transition transform .6s, opacity .8s
.modal-open
	overflow: hidden
	overflow-y: scroll
	position: fixed
	top: 0
	left: 0
	right: 0
	bottom: 0
	width: 100%

.modal-wrap
	position: fixed
	width: 100%
	height: 100%
	overflow-y auto
	flex(mid)

.modal-title
	+below(768px)
		font-size: 20px
	margin-bottom: 24px
	font-size: 24px
	font-weight: 700
	display block
	color black

.modal-text
	+below(768px)
		width: 100%
	margin: 30px auto

.modal-send
	@extend .btn--md
	@extend .btn--mark
	width: 100%

.modal--msg
	&.modal__show
		position absolute
		top calc(100% + 20px)
		left calc(50% - 160px)
	z-index 1010
	max-width 320px
	.modal-content
		padding: 20px 20px 24px 20px

// modal === end

// cookie
.cookie
	position: fixed
	bottom 20px
	left 0
	width: 100%
	transform translateY(10px)
	opacity: 0
	z-index -1
	tr()
.cookie--active
	z-index 20
	opacity: 1
	transform translateY(0)
.cookie-wrap
	padding: 15px 20px
	br(20px)
	z-index 10
	background: white
	f()
	justify-content: space-between
	border 1px solid $border-color
	.icon
		&:hover
			fill black
		tr()
		size 14px
		margin-left: 10px
		fill $gray
		cp()
.cookie-text
	width calc(100% - 30px)
	font-size: 12px
// cookie === end

// header
.header-wrap
	background: white
	box-shadow: 0px 4px 8px rgba(102, 130, 185, 0.12);

.header
	+below(1200px)
		height: 60px
	height: 80px
	flex(between)

.logo
	+below(640px)
		width: 160px
	width: 200px

.phone
	+below(740px)
		display none
	font-weight: 700
	font-size: 20px
	margin-left auto
	margin-right: 20px
	@extend .link
.callback
	+below(740px)
		display none
	cp()
	@extend .link--mark

.header-nav
	+below(1200px)
		display none
	flex(between)
	width: 48%
	margin-left auto

.header-nav__el
	@extend .link

.header-msg
	+above(741px)
		display none
	f()
	margin-left auto

.header-msg__el
	+below(1024px)
		size 60px
	size 72px
	flex(mid)
	border-left 1px solid $border-color
	tr()
	background: white
	&:last-child
		border-right 1px solid $border-color
// header === end

// slider menu
.head-toggle
	+above(1201px)
		display: none
	+below(1024px)
		size 60px
	flex(mid)
	cp()
	size 80px
	margin-right: -20px
	.icon
		+below(640px)
			size 20px
		size 25px
		fill black
	.icon-close
		display: none

.head-toggle.slide-block-toggle--open
	.icon-close
		display: block
	.icon-open
		display: none

.slide-block
	+below(640px)
		padding: 0
	position: fixed
	top 60px // Высота шапки
	width: 100%
	tr(all)
	height: calc(100% - 60px) // Высота шапки
	z-index 100
	background: white
	padding: 10px 32px 32px 32px
	overflow auto
	border-top 1px solid $border-color
.slide-block--left
	left 0
	transform translateX(-100%)

.slide-block--right
	right 0
	transform translateX(100%)

.slide-block--open
	transform translateX(0%)

.slide-nav__el
	+below(640px)
		padding: 22px
	padding: 22px 0
	font-weight: 500
	color black
	display block
	@extend .type--md

.board__el-wrap
	+below(1280px)
		min-height auto
		padding: 8% 0
	+below(640px)
		padding: 20px 0 0 0
	padding: 12% 0 8% 0
	position relative
	min-height 560px

.board__el
	background: #A9D96B;
	overflow: hidden
.board__content
	+below(1280px)
		width: 100%
		max-width 535px
	+below(640px)
		flex(mid)
		fl()
		max-width 100%
	width: 52%
	z-index 5
	position relative

.board__title
	+below(1280px)
		font-size: 34px
	+below(768px)
		margin-bottom: 5%
	+below(640px)
		text-align center
		font-size: 24px
		margin-bottom: -10px
	@extend .type--lgx
	font-weight 700
	color white
	margin-bottom: 10%

.board__title-sub
	+below(640px)
		display none
	color white
	font-weight: 700
	margin-bottom: 24px
	@extend .type--md
.board__img
	+below(1200px)
		padding: 25% 30%
		right: -10%
	+below(768px)
		right: -30%
	+below(640px)
		position: static
		padding: 40% 24%
		margin: 20px auto 0 auto
		width: 90%
	position absolute
	padding: 22% 26%
	bg-full()
	right: 0
	bottom 0

// work-step
.work-step
	+below(1024px)
		grid-gap 20px
	+below(768px)
		grid-template-columns: 1fr
	display: grid
	grid-gap 28px
	grid-template-columns: repeat(3, 1fr)
	//grid-template-columns: repeat(auto-fill, minmax(12rem,1fr))

.work-step--swamp
	.work-step__el
		background: $swapmLight
		border 0
	.work-step__el-title
		color $swapm
	.work-step__el-text
		color $swapm
.work-step__el
	+below(1024px)
		padding: 20px
	border-radius 12px
	border 1px solid $border-color
	padding: 20px
	tr()
.work-step__el-icon
	margin: 0 0 20px 0
	.icon
		+below(768px)
			size 60px
		size 80px
.work-step__el-title
	+below(1024px)
		font-size: 18px
	color black
	@extend .type--md
	font-weight 700
	margin-bottom: 12px
.work-step__el-text
	color $typeSecondary
// work-step === end

// invite
.invite
	+below(1024px)
		align-items: flex-start
	+below(640px)
		fl()
	f()
	align-items center
	justify-content space-between

.invite-img
	+below(640px)
		width: 100%
		order 2
	width: 49%
	position relative
.invite-msg
	+below(768px)
		display none
	position absolute
	size: 160px
	padding: 5.7% 3%
	round()
	flex(mid)
	fl()
	background: linear-gradient(98.95deg, #E3EEFF 0%, #E4F6E4 52.6%, #FFEEE4 100%);
	color black
	top 55%
	right: -3%
	img
		+below(640px)
			margin 0 16px 0 0
		size 48px
		margin-bottom: 6px
	span
		+below(640px)
			text-align: left
			font-size: 12px
		@extend .type--sm
		text-align center
.invite-info
	+below(1024px)
		width: 45%
	+below(640px)
		width: 100%
		order 1
		margin-bottom: 20px
	width: 40%
.invite-info__btn
	+below(768px)
		width: 100%
		padding: 18px 20px
	+below(640px)
		display none
.invite-info-wrap
	+below(1024px)
		width: 100%
.invite-title
	@extend .type--lgx
	@extend .type--head
	@extend .mb-24
.invite-text
	+below(640px)
		margin-bottom: 0
	@extend .mb-48
	color $typePrimary
.invite-subs

	+below(640px)
		fl()
		justify-content: center
	f()
	align-items center
	@extend .mb-100
.invite-subs-img
	+below(1024px)
		width: 50%
	+below(640px)
		width: 100%
		margin-bottom: 24px
		margin-right: 0
		flex(mid)
	width: 40%
	margin-right: 10%
.invite-subs-info
	+below(1024px)
		width: 45%
	+below(768px)
		width: 50%
	+below(640px)
		width: 100%
	width: 40%
	.input-btn-cont
		+below(1024px)
			fl()
			width: 100%
			.input-row
				width: 100%
			.btn--md
				width: 100%
.invite-subs-title
	+below(1024px)
		line-height: 1.3
	+below(640px)
		text-align center
	@extend .type--lgx
	font-weight 700
	color black
	margin-bottom: 24px
.invite-subs-text
	+below(1024px)
		font-size: 16px
	+below(640px)
		text-align center
	@extend .mb-64
	@extend .type--md
	color $typePrimary
	line-height: 1.6
// invite === end

// structure
.structure
	+below(640px)
		grid-template-columns: 1fr
	display: grid
	grid-gap 20px
	grid-template-columns: repeat(3, 1fr)
.structure__el
	f()
	align-items center
	img
		+below(1024px)
			size 80px
		+below(768px)
			size 60px
		margin-right: 24px
	span
		+below(1280px)
			font-size: 20px
		+below(768px)
			font-size: 16px
		@extend .type--lg
		font-weight: 700
// structure === end

// review slider

.slider-review
	+below(1024px)
		margin-right: -42px
		overflow: hidden
	+below(640px)
		margin-right: -20px
	.slider-el-wrap
		max-width 310px
.slider-review__el
	background: white
	br(12px)
	overflow hidden
.review-head
	+below(1024px)
		margin: 0 0 40px 0
	flex(between)
	margin: -28px 0 40px 0

.review-head__info
	+below(1024px)
		width: 100%
	width: 60%
.review-head__text
	color $typeSecondary
.review-control
	+below(1024px)
		display none!important

.slider-review-head
	padding: 16px
	f()
	align-items center
	grid-gap 12px

.slider-review-img
	bg-full()
	padding: 40% 10%
.slider-review-wrap
	padding: 16px 8px 16px 16px
	position relative
	&:before
		content ''
		position absolute
		width: 100%
		height: 100px
		bottom 15px
		left 0
		background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, #FFFFFF 100%);

.slider-review-content
	height 270px
	overflow auto
	padding-right: 16px
.slider-review-text
	padding:0 0 60px 0


.slider-review-head__user
	size 44px
	round()
	bg-full()

// review slider === end

// slick
.slick-slide
	&:hover
		outline none!important
	&:active
		outline none!important
	&:focus
		outline none!important

.slider-wrap
	position relative

.slider-control-wrap
	f()
	grid-gap 16px

.slider-control-row
	f()
	.slider-control
		&:first-child
			margin-right: 24px
.slider-control
	flex(mid)
	tr(all)
	z-index 10
	size 80px
	cp()
	round()
	border 1px solid $border-color
	&:hover
		background: white
		border 1px solid white
		box-shadow: 0px 12px 32px rgba(41, 42, 53, 0.16);
		.icon
			fill black
	.icon
		fill black

.slider-control--sm
	size 44px
	.icon
		size 18px
.slider-control--light
	border 2px solid #ffffff2e
	&:hover
		background: white
		border 1px solid white
		.icon
			fill black
	//.icon
	//	fill white

.slider-control
	background: white
	border 0!important


//Навигация внутри
.slider-wrap--inarrow
	.slider-control
		+below(1580px)
			display none
		position: absolute
		top 50%
		margin-top: -40px
	.slider-control--left
		left 80px
	.slider-control--right
		right 80px
//Навигация внутри
// === for custom navigation ===
.slider-extend
	.slick-slide
		+below(1024px)
			margin: 0 8px
		margin: 0 14px
	.slick-list
		+below(1024px)
			margin: 0 -8px
		margin: 0 -14px
// slick === end


// accordion
.accordion
	+below(640px)
		width 100%
	background: white
	opacity: 0
	left -9999px
	visibility: hidden
	position absolute
	transform translateX(10px)
	transition opacity 1.2s, transform .8s
	&.active
		transform translateX(0px)
		visibility: visible
		opacity: 1
		left initial
		position: static
.accordion__el
	border 1px solid #e5e5e5
	margin-top: -1px
	cp()
	&:hover
		.accordion__el-head-icon
			&:before
				content ''
				background: $green
			&:after
				content ''
				background: $green

.accordion__el-head
	+below(640px)
		padding: 20px
	padding: 30px 40px
	flex(between)
	color black
	&.active
		.accordion__el-head-text
			color $green
		.accordion__el-head-icon
			&:after
				content ''
				transform rotate(45deg)
			&:before
				content ''
				transform rotate(45deg)
.accordion__el-head-text
	+below(640px)
		line-height: 1.6
	@extend .type--md
	width: 80%
	font-weight: 700

.accordion__el-head-icon
	+below(640px)
		size 16px
	position: relative
	size 24px
	&:before
		content ''
		tr(all)
		height: 2px
		width: 100%
		background: black
		position: absolute
		top calc(50% - 1px)
	&:after
		content ''
		tr(all)
		height: 100%
		width: 2px
		background: black
		position: absolute
		left calc(50% - 1px)

.accordion__el-content
	+below(640px)
		padding:0 20px 20px 20px
	padding: 0 40px 40px 40px
	display: none
	p
		color $typePrimary
		&:first-child
			margin-top: 0
		&:last-child
			margin-bottom: 0


// accordion === end

// deliver
.deliver-wrap
	+below(640px)
		fw()
	f()
	justify-content space-between
.deliver-info
	+below(1024px)
		width: 45%
	+below(640px)
		width: 100%
		margin-bottom: 24px
	width: 28%
.deliver-info__text
	+below(640px)
		margin-bottom: 24px
	margin-bottom: 42px
	color $typeSecondary
//.deliver-pick
.deliver-pick__el
	f()
	align-items center
	margin-bottom: 22px
	&:last-child
		margin-bottom: 0
.deliver-pick__el-color
	round()
	size 24px
	margin-right: 16px
.deliver-pick__el-text
	font-weight 700
	color black
.deliver-map
	+below(1024px)
		width: 50%
		padding: 22% 10%
		min-height 420px
	+below(640px)
		min-height 230px
		width: 100%
	width: 66%
	padding: 15% 10%
.map-wrap
	position relative
	background: $grayLight

.map-wrap--md
	width: 100%
	padding: 28% 10%
	+below(640px)
		min-height 230px
.map
	position absolute
	top 0
	left 0
	width: 100%
	height: 100%
// deliver === end

// soc-row
.soc-row
	f()

.soc-row--mid
	flex(mid)

.soc-row--lg
	.soc-row__el
		+below(360px)
			size 56px
		size 72px
.soc-row__el
	round()
	flex(mid)
	tr(all)
	margin-right: 16px
	size 48px
	background: #787775
	&:last-child
		margin-right: 0
	.icon
		fill white
.soc-row--monochrome
	.soc-row__el
		background: rgba(255,255,255,0.1)
		&:hover
			background: rgba(255,255,255,0.2)
		.icon
			fill white
// soc-row === end

// program
scroll-create-mobile()
	white-space: nowrap
	overflow: auto
	margin: 0 -42px
	padding-left: 42px
	padding-bottom: 20px
	+below(640px)
		margin: 0 -20px 30px -20px
		padding-left: 20px

slider-create-mobile()
	margin-right: -42px
	.slick-slide
		margin: 0 10px
	.slick-list
		margin: 0 -10px
	.slick-track
		display: flex !important
	.slick-slide
		height: inherit !important;

.program-list-container
	+below(1280px)
		scroll-create-mobile()
		padding-bottom: 20px
		margin-bottom: 10px!important
	display: grid!important
	grid-template-columns: 1fr;
	flex-grow: 1
.program-list
	+below(1280px)
		grid-template-columns: initial
		grid-auto-flow:column
		grid-gap 0
		.program-el
			margin-right: 16px
			min-width: 300px
			display: flex
	display: grid
	grid-gap 28px
	grid-template-columns: repeat(4, 1fr)

.program-el
	br(12px)
	overflow hidden
	tr()
	display: flex
	fl()
	white-space initial
	max-width 300px
	position relative


.program-el-wrap
	f()
	fl()
	tr()
	flex-grow 1
	border 1px solid $border-color
	border-top 0!important
	border-radius 0 0 12px 12px
	background: white

.program-el__img
	bg-full()
	//padding: 38% 10%
	width: 100%
	height: 232px
	position relative
.program-el__content
	flex-grow 1
	padding: 20px
.program-el__title
	line-height: 1.4
	color black
	margin-bottom: 8px
.program-el__text
	@extend .type--sm
	color $typePrimary
.program-el__footer
	padding: 12px 20px
	border-top 1px solid $border-color
	flex(between)
// program === end


// program consist
.program-consist
	+below(640px)
		min-width auto
		width: 80%
	f()
.program-consist__el
	padding: 0 10px
	flex-grow 1
	flex(mid)
	fl()
	text-align center
	border-right 1px solid $border-color
